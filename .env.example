# Metasmart Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Must be set before running
# ===========================================

# Database
DB_URL=jdbc:postgresql://localhost:5432/metasmart
DB_USERNAME=metasmart
DB_PASSWORD=your_secure_password_here

# JWT Secret (generate a secure 256-bit key)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# ===========================================
# OPTIONAL - Override defaults as needed
# ===========================================

# Server
# SERVER_PORT=8080

# JWT
# JWT_EXPIRATION=86400000

# Database/JPA
# JPA_DDL_AUTO=validate
# JPA_SHOW_SQL=false
# FLYWAY_ENABLED=true

# Swagger (disable in production)
# SWAGGER_ENABLED=false

# ===========================================
# EMAIL (Required for password reset)
# ===========================================

# MAIL_ENABLED=false
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_FROM=noreply@metasmart.app
# FRONTEND_URL=http://localhost:3000

# ===========================================
# CORS (Required for frontend)
# ===========================================

# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# RATE LIMITING
# ===========================================

# RATE_LIMIT_ENABLED=true
# Rate limit for auth endpoints (requests per minute per IP)
# RATE_LIMIT_AUTH_CAPACITY=10
# RATE_LIMIT_AUTH_REFILL_TOKENS=10
# RATE_LIMIT_AUTH_REFILL_DURATION_SECONDS=60

# ===========================================
# STRIPE (Required for payments)
# ===========================================

# Get these from https://dashboard.stripe.com/apikeys
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard)
# STRIPE_PRICE_PREMIUM_MONTHLY=price_...
# STRIPE_PRICE_PREMIUM_YEARLY=price_...
# STRIPE_PRICE_STREAK_SHIELD=price_...
# STRIPE_PRICE_STREAK_SHIELD_PACK=price_...
# STRIPE_PRICE_AI_INSIGHTS=price_...
# STRIPE_PRICE_GUARDIAN_SLOT=price_...
